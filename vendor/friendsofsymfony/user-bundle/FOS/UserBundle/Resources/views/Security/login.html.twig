{% extends 'EspritDemoBundle:Default:home.html.twig' %}
{% block title %}Authentification{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    {% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}
       

       
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <table border="0" width="30%">
        <tr>
            <td> <label for="username">{{ 'security.login.username'|trans }}</label></td>
            <td><input type="text" id="username" name="_username" 
                       value="{{ last_username }}" required="required" /> </td>
        </tr>
        <tr>
            <td><label for="password">{{ 'security.login.password'|trans }}</label></td>
            <td><input type="password" id="password" name="_password" required="required" /></td>
        </tr>
        <tr><td></td>
            <td><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></td>
        </tr>
        <tr> <td></td>
            <td><input type="submit" id="_submit" name="_submit" 
                       value="{{ 'security.login.submit'|trans }}" /></td>
        </tr>
    </table>
  <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
</form>
{% endblock body %}
